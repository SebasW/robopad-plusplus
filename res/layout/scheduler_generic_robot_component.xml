<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/generic_robot_controls_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/scheduler_control_height"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/command_button_1"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
        android:background="@drawable/btn_green_selector"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_1_control_selector" />

    <ImageButton
        android:id="@+id/command_button_2"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
