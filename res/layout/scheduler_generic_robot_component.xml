        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_2_control_selector" />

    <ImageButton
        android:id="@+id/command_button_3"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
        android:background="@drawable/btn_green_selector"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_3_control_selector" />

    <ImageButton
        android:id="@+id/command_button_4"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
        android:background="@drawable/btn_green_selector"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_4_control_selector" />

    <ImageButton
        android:id="@+id/command_button_5"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
        android:background="@drawable/btn_green_selector"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_5_control_selector" />

    <ImageButton
        android:id="@+id/command_button_6"
        android:layout_width="@dimen/scheduler_control_height"
        android:layout_height="match_parent"
        android:background="@drawable/btn_green_selector"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:src="@drawable/schedule_command_button_6_control_selector" />

</LinearLayout>